{% extends "layout.njk" %}

{% block content %}

<div class="container text-center pt-3" style="width:500px;">
  <form action="/data" method="post" >
    <div>
      <label for="form">Soumettez-nous votre idée</label>
    </div>
    <div class="mt-2 text-left">
      <label for="com_name">Pseudo</label>&nbsp;
      <input type="text" id="com_name" name="com_name" />
    </div>
    <div class="text-left">
      <label for="com">Commentaire :</label><br/>
      <textarea name="com" id="message" placeholder="Décrivez votre idée" style="float: left; width: 100%; height: auto; min-height:100px;"></textarea>
    </div>

    <div class="text-left">
      <button type="submit" class="mt-3 rounded bg-warning text-dark">Poster</button>
    </div>
  </form>
</div>

<div class="container text-left mt-5" style="width:auto;">
  <h5>Voici les idées déjà soumises :</h5>
  <em>- N'hésitez pas à les noter -</em>
</div>

<div class="card" style="width:auto; margin:20px; margin-bottom:5px;">
  <div class="card-header">
    Dominique
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
      <footer class="blockquote-footer">posté le <cite title="Source Title">10/12/2017</cite></footer>
    </blockquote>
  </div>
</div>
<div class="text-right mr-5 mb-5">
  <img src="../images/thumb-up.jpg" width="30" onclick="onClickUp()"/>&nbsp;<a id="clicks-up">O</a>
  <img src="../images/thumb-down.jpg" width="30" onclick="onClickDown()"/>&nbsp;<a id="clicks-down">O</a>
</div>

<script type="text/javascript">
    let clicksUp = 0;
    let clicksDown = 0;

    function onClickUp() {
        clicksUp += 1;
        document.getElementById("clicks-up").innerHTML = clicksUp;
    };

    function onClickDown() {
        clicksDown += 1;
        document.getElementById("clicks-down").innerHTML = clicksDown;
    };
</script>

{% endblock %}
