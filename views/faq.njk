{% extends "layout.njk" %}

{% block content %}

<div class="container text-left mt-5" style="width:auto;">
  <h5>Foire aux questions</h5>
</div>

<div class="card" style="width:auto; margin:20px; margin-bottom:5px;">
  <div class="card-header">
    <form action="/data" method="post" >
      <div class="mt-2 text-left">
        <label for="com_name">Votre nom :</label>&nbsp;
        <input type="text" id="com_name" name="com_name" />
      <div class="text-left">
        <label for="com">Votre question :</label><br/>
        <textarea name="com" id="message" style="float: left; width: 100%; height: auto; min-height:100px;"></textarea>
      </div>

      <div class="text-left">
        <button type="submit" class="mt-3 rounded bg-warning text-dark">Poster</button>
      </div>
    </form>
  </div>
</div>

{% endblock %}
